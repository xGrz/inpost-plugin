<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    bootstrap="vendor/autoload.php"
    colors="true"
    cacheDirectory=".phpunit.cache"
>
    <testsuites>
        <testsuite name="Api">
            <directory>tests/InPostApi</directory>
        </testsuite>

        <testsuite name="Casts">
            <directory>tests/Casts</directory>
        </testsuite>

        <testsuite name="Webhook">
            <directory>tests/Webhook</directory>
        </testsuite>

        <testsuite name="Parcels">
            <directory>tests/Parcels</directory>
        </testsuite>

        <testsuite name="Facades">
            <directory>tests/Facades</directory>
        </testsuite>
    </testsuites>

    <source>
        <include>
            <directory suffix=".php">src</directory>
        </include>
    </source>

    <php>
        <env name="APP_ENV" value="testing"/>
        <env name="CACHE_DRIVER" value="array"/>
        <env name="QUEUE_CONNECTION" value="sync"/>
        <env name="SESSION_DRIVER" value="array"/>
        <env name="DB_CONNECTION" value="sqlite"/>
        <env name="DB_DATABASE" value=":memory:"/>
    </php>
</phpunit>
